<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:padding="8dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tanda"/>
            <TextView
                android:id="@+id/tv_nomor_surat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/dark"
                android:text="300"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/tv_nama_surat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Al-Fatihah"
                android:textColor="@color/colorAyat"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_jumlah_ayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#bebebe"
                android:fontFamily="@font/futura_medium"
                android:text="7 Ayat"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_arab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="18sp"
            android:textColor="@color/colorAyat"
            android:text="@string/default_arab"/>
    </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1px"
       android:layout_marginLeft="4dp"
       android:layout_marginRight="4dp"
       android:background="@color/darker_gray"/>
</LinearLayout>